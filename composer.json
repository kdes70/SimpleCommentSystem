{
  "name": "kdes70/simple-comment-system",
  "description": "Простая система комментариев",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "doctrine/dbal": "^3.5",
    "nikic/fast-route": "^1.3",
    "php-di/php-di": "^6.4",
    "vlucas/valitron": "^1.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "cache:clear": "rm -rf var/cache/*",
    "cs:check": "phpcs --standard=PSR12 src/",
    "cs:fix": "phpcbf --standard=PSR12 src/",
    "test": "phpunit tests/"
  }
}